@page "/category/create"

<div class="my-2 row">
    <h3 class="card-title mb-3 ml-3 text-primary">@Title Category</h3>

    <div class="col-8">
        <EditForm Model="Category" OnSubmit="UpsertCategory">
            <div class="form-group">
                <label for="Name" class="lead">Name</label>
                <InputText @bind-Value="Category.Name" class="form-control"></InputText>
            </div>
            <div class="form-group mt-4 p-3">
                <button class="btn btn-primary">@Title</button>
                <Navlink href="CategoryList" class="btn btn-secondary">Back to Index</Navlink>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private CategoryDTO Category { get; set; } = new CategoryDTO();

    private string Title {get; set;} = "Create";

    private void UpsertCategory()
    {
        Category.Name = "Button clicked";
    }
}
